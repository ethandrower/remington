{
  "mcpServers": {
    "atlassian": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "-e", "JIRA_URL=https://your-instance.atlassian.net",
        "-e", "JIRA_USERNAME=your-email@company.com",
        "-e", "JIRA_API_TOKEN",
        "-e", "CONFLUENCE_URL=https://your-instance.atlassian.net/wiki",
        "-e", "CONFLUENCE_USERNAME=your-email@company.com",
        "-e", "CONFLUENCE_API_TOKEN",
        "-e", "JIRA_PROJECTS_FILTER=PROJECT1,PROJECT2",
        "-e", "MCP_VERBOSE=true",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ],
      "env": {
        "JIRA_API_TOKEN": "your-atlassian-api-token-here",
        "CONFLUENCE_API_TOKEN": "your-atlassian-api-token-here"
      },
      "description": "Atlassian MCP Server - Get API token from https://id.atlassian.com/manage-profile/security/api-tokens"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/your/codebase",
        "/path/to/project-manager"
      ],
      "description": "Filesystem access to codebases"
    }
  }
}
